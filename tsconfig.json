{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "reflect-metadata"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src",
    "paths": {
      "@application/*": [
        "application/*"
      ],
      "@config/*": [
        "infrastructure/config/*"
      ],
      "@providers/*": [
        "infrastructure/providers/*"
      ],      
      "@domain/*": [
        "domain/*"
      ],
      "@repositories/*": [
        "infrastructure/repositories/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}